{
  "name": "unzipomatic",
  "version": "0.0.1",
  "homepage": "https://github.com/kibertoad/unzipomatic",
  "description": "Modern unzipping library for Node.js",
  "author": "Igor Savin <kibertoad@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git://github.com/kibertoad/unzipomatic.git"
  },
  "license": "MIT",
  "files": [
    "dist/**",
    "LICENSE",
    "README.md"
  ],
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "module": "./dist/index.mjs",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json --noEmit && tsup",
    "test": "vitest --coverage",
    "test:ci": "npm run lint && npm run test",
    "lint": "biome lint .",
    "lint:fix": "biome check --apply .",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "buffer-crc32": "~1.0.0",
    "fd-slicer": "^1.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.5.3",
    "@types/buffer-crc32": "^0.2.4",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitest/coverage-v8": "^1.2.1",
    "cli-testlab": "^4.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-vitest": "^0.3.20",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.1"
  }
}
