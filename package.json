{
  "name": "unzipomatic",
  "version": "0.0.1",
  "homepage": "https://github.com/kibertoad/unzipomatic",
  "description": "Modern unzipping library for Node.js",
  "author": "Igor Savin <kibertoad@gmail.com>",
  "maintainers": [
    {
      "name": "Igor Savin",
      "email": "kibertoad@gmail.com"
    },
    {
      "name": "Vinícius Lourenço",
      "email": "contact@viniciusl.com.br"
    }
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/kibertoad/unzipomatic.git"
  },
  "license": "MIT",
  "files": [
    "dist/**",
    "LICENSE",
    "README.md"
  ],
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "module": "./dist/index.mjs",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json --noEmit && tsup",
    "test": "vitest --coverage",
    "test:ci": "npm run lint:ci && npm run test",
    "lint": "biome lint .",
    "lint:ci": "biome ci .",
    "lint:fix": "biome check --apply .",
    "prepublishOnly": "npm run build && publint"
  },
  "dependencies": {
    "better-fd-slicer": "1.0.0",
    "buffer-crc32": "1.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/buffer-crc32": "0.2.4",
    "@types/node": "22.13.1",
    "@vitest/coverage-v8": "1.3.1",
    "@vitest/ui": "1.3.1",
    "bl": "6.0.19",
    "cli-testlab": "4.0.0",
    "lefthook": "1.10.10",
    "publint": "0.3.4",
    "tslib": "2.8.1",
    "tsup": "8.3.6",
    "typescript": "5.7.3",
    "vitest": "1.3.1"
  }
}
